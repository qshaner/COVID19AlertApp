<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="#B8D8DC"
    app:contentPadding="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="228dp"
        android:padding="8dp"
        android:id="@+id/example_item">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/symptomList"
                android:layout_width="397dp"
                android:layout_height="85dp"
                android:layout_marginTop="4dp"
                android:background="#CBEDCA"
                android:outlineProvider="bounds"
                android:paddingLeft="@dimen/text_margin"
                android:paddingTop="7dp"
                android:paddingRight="@dimen/text_margin"
                android:text="CONTENT"
                android:textColor="#0E1119"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/symptomDate"
                app:layout_constraintVertical_bias="0.274" />

            <TextView
                android:id="@+id/symptomDate"
                android:layout_width="214dp"
                android:layout_height="19dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="@dimen/text_margin"
                android:background="@color/colorAccent"
                android:paddingLeft="@dimen/text_margin"
                android:text="DATE"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.024" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>